// nextflow.config
// I-SAGE Month 2 base config
// ------------------------------------------------------------------

nextflow.enable.dsl = 2

// -----------------------------
// Default pipeline parameters
// -----------------------------
params {
    fastq_dir       = null
    outdir          = "/home2/faculty/pmishra/I-SAGE_Month2"
    sample_pattern  = "*_R1.fastq.gz"

    genome_fasta    = "/mnt/evafs/groups/sfglab/jborkowska/hg38/hg38_reference/hg38_reference.fna"
    genome_index    = "/mnt/evafs/groups/sfglab/jborkowska/hg38/hg38_reference/hg38_reference.fna"

    break_calling = [
        mode          : "per_base",
        bin_size      : 1000,
        remove_sgrdi  : true
    ]
}

// -----------------------------
// Profiles
// -----------------------------
profiles {

    local {
        includeConfig "conf/local.config"
    }

    eden {
        includeConfig "conf/eden.config"
    }

    standard {
        process.executor = 'local'
        process.cpus     = 2
        process.memory   = '4 GB'
    }
}

// -----------------------------
// Work directory
// -----------------------------
workDir = "/home2/faculty/pmishra/I-SAGE_work"
