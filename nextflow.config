// nextflow.config
// -----------------------------

// Enable DSL2
nextflow.enable.dsl = 2

// Load YAML/JSON config if provided via -params-file
// Nextflow will automatically merge params from the file into `params`

// -----------------------------
// Default pipeline parameters
// (these can all be overridden in ibless.yaml)
// -----------------------------
params {
    fastq_dir       = null
    outdir          = "results"
    sample_pattern  = "*_R1.fastq.gz"

    genome_fasta    = null
    genome_index    = null

    break_calling = [
        mode          : "per_base",
        bin_size      : 1000,
        remove_sgrdi  : true
    ]
}

// -----------------------------
// Include profiles
// -----------------------------
profiles {

    local {
        includeConfig "conf/local.config"
    }

    eden {
        includeConfig "conf/eden.config"
    }

    // Useful for debugging
    standard {
        process.executor = 'local'
    }
}

// -----------------------------
// Work directory
// -----------------------------
workDir = "work"
