// nextflow.config (at repo root)

// Default pipeline parameters (can be overridden by -params-file or CLI)
params {
    fastq_dir   = null       // will be set via YAML, but keep defaults here
    outdir      = "results"
    sample_pattern = "*_R{1,2}.fastq.gz"

    genome_fasta = null
    genome_index = null

    break_calling = [
        mode      : "per_base",   // or "binned"
        bin_size  : 1000,         // used if mode == "binned"
        remove_sgrdi : true
    ]
}

// Include profiles from conf/
profiles {
    local { includeConfig 'conf/local.config' }
    eden  { includeConfig 'conf/eden.config'  }
}
